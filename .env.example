# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=banking_account
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=banking_transactions

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ZOOKEEPER_PORT=2181

# Service Ports
CONFIG_SERVER_PORT=8888
EUREKA_SERVER_PORT=8761
API_GATEWAY_PORT=8080
ACCOUNT_SERVICE_PORT=8081
TRANSACTION_SERVICE_PORT=8082
NOTIFICATION_SERVICE_PORT=8083

# Eureka Configuration
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# JWT Configuration (IMPORTANT: Generate your own secret key)
# Use: openssl rand -base64 64 or any secure random generator
JWT_SECRET=CHANGE_THIS_TO_YOUR_OWN_SECRET_KEY_MINIMUM_256_BITS
JWT_EXPIRATION=86400000

# Application Configuration
APP_ACCOUNT_MIN_BALANCE=0
APP_ACCOUNT_MAX_BALANCE=1000000
APP_ACCOUNT_DEFAULT_CURRENCY=USD

# Virtual Threads
SPRING_THREADS_VIRTUAL_ENABLED=true

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# Resilience4j Configuration
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION=10000

RATE_LIMITER_LIMIT_FOR_PERIOD=10
RATE_LIMITER_LIMIT_REFRESH_PERIOD=1s

RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_DURATION=1000

BULKHEAD_MAX_CONCURRENT_CALLS=5

TIME_LIMITER_TIMEOUT_DURATION=3s

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true
